<p id="notice"><%= notice %></p>

<h1>Subco Invoices</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Details</th>
      <th>Invoice num</th>
      <th>Amount</th>
      <th>Subco po</th>
      <th>Milestone</th>
      <th>Status</th>
      <th>Pv number</th>
      <th>Approval</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subco_invoices.each do |subco_invoice| %>
      <tr>
        <td><%= subco_invoice.date %></td>
        <td><%= subco_invoice.details %></td>
        <td><%= subco_invoice.invoice_num %></td>
        <td><%= subco_invoice.amount %></td>
        <td><%= subco_invoice.subco_po %></td>
        <td><%= subco_invoice.milestone %></td>
        <td><%= subco_invoice.status %></td>
        <td><%= subco_invoice.pv_number %></td>
        <td><%= subco_invoice.approval %></td>
        <td><%= link_to 'Show', subco_invoice %></td>
        <td><%= link_to 'Edit', edit_subco_invoice_path(subco_invoice) %></td>
        <td><%= link_to 'Destroy', subco_invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

