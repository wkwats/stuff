<%= link_to 'New Subco Po', new_subco_po_path %>

<div>

      <div role="main" class="container1">
        <div class="jumbotron text-center">
          <h1>Project Title</h1>
          <div class="row">
              <div class="col-md-2 mb-3">
                <a href="#">
                  <h1><i class="fas fa-angle-double-left"></i></h1>
                </a>
              </div>
              <div class="col-md-8 mb-3">
                <h2>Site name</h2>
                <h3>Site ID</h3>
                <button class="btn btn-outline-success btn-lg btn-block" type="submit">All Sites</button>
              </div>
              <div class="col-md-2 mb-3">
                <a href="#">
                  <h1><i class="fas fa-angle-double-right"></i></h1>
                </a>
              </div>
            </div>
          </div>
      </div>


    <div class="container">
      <div class="row">
        <div class="col-md-4 order-md-2 mb-4">
          <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">Project Health</span>
            <span class="badge badge-secondary badge-pill">Status:</span>
          </h4>
          <ul class="list-group mb-3">
            <li class="list-group-item d-flex justify-content-between lh-condensed">
              <div>
                <h6 class="my-0">Project Status</h6>
                <div class="progress">
                  <div class="progress-bar" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">25%</div>
                </div>
              </div>
              <span class="text-muted"></span>
            </li>

            <li class="list-group-item d-flex justify-content-between lh-condensed">
              <div>
                <h6 class="my-0">Current Activity</h6>
                <small class="text-muted">Start date: </small>
                <br>
                <small class="text-muted">Due date:</small>
              </div>
              <span class="text-muted">
                <div>
                  <span class="badge badge-secondary badge-pill">Status</span>
                </div>
              </span>
            </li>

            <li class="list-group-item d-flex justify-content-between lh-condensed">
              <div>
                <h6 class="my-0">Tasks Status</h6>
                <div>
                  <small class="text-muted">Open tasks:</small>
                  <span class="badge badge-secondary badge-pill">3</span>
                </div>

                <div>
                  <small class="text-muted">closed tasks:</small>
                  <span class="badge badge-secondary badge-pill">4</span>
                </div>
                <div>
                  <small class="text-muted">Overdue tasks:</small>
                  <span class="badge badge-secondary badge-pill">5</span>
                </div>
              </div>
            </li>
          </ul>
        </div>
        <div class="col-md-8 order-md-1">
          <h4 class="mb-3">Subco Pos</h4>
          <hr class="mb-4">
          <div class="row">

             <div class="form-inputs">
    
                <form>

                  <%= render 'form', subco_po: @subco_po %>
                  
                </form>
              </div>

          </div>
          <div class="row">


            <table>
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Details</th>
                  <th>Number</th>
                  <th>Amount</th>
                  <th>Sd</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @subco_pos.each do |subco_po| %>
                  <tr>
                    <td><%= subco_po.date %></td>
                    <td><%= subco_po.details %></td>
                    <td><%= subco_po.number %></td>
                    <td><%= subco_po.amount %></td>
                    <td><%= subco_po.sd %></td>
                    <td><%= link_to 'Show', subco_po %></td>
                    <td><%= link_to 'Edit', edit_subco_po_path(subco_po) %></td>
                    <td><%= link_to 'Destroy', subco_po, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>


          </div>
        </div>
        </div>
      </div>

  </div>

